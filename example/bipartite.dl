.in
.decl Arc(y:integer, x:integer)
.input Arc.csv

.decl Source(x:integer)
.input Source.csv

.out
.decl BipartiteViolation(x:integer)
.decl Zero(x:integer)
.decl One(x:integer)

.rule
Zero(x) :- Source(x).

One(y) :- Arc(x, y), Zero(x).
One(x) :- Arc(x, y), Zero(y).

Zero(y) :- Arc(x, y), One(x).
Zero(x) :- Arc(x, y), One(y).

BipartiteViolation(x) :- One(x), Zero(x).