.in 
.decl AddressOf(y: integer, x: integer)
.input addressOf.csv

.decl Assign(y: integer, x: integer)
.input assign.csv

.decl Load(y: integer, x: integer)
.input load.csv

.decl Store(y: integer, x: integer)
.input store.csv

.out
.decl PointsTo(y: integer, x: integer)
.output pointsto.csv

.rule
PointsTo(y, x) :- AddressOf(y, x).
PointsTo(y, x) :- Assign(y, z), PointsTo(z, x).
PointsTo(y, w) :- Load(y, x), PointsTo(x, z), PointsTo(z, w).
PointsTo(z, w) :- Store(y, x), PointsTo(y, z), PointsTo(x, w).
